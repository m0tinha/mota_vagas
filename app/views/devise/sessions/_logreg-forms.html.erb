<div id="logreg-forms">
  <h2>Sign in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-control' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: 'form-control' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-sign-in-alt"></i> Log in</button>
      <a href="#" id="forgot_pswd">Forgot password?</a>
      
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
