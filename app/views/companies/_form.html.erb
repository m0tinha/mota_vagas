<%= simple_form_for @company do |f| %>
  <div class="mb-3">
    <%= f.input :name, label: "Nome da Empresa", input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= f.input :url, label: "URL da Empresa", input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= f.button :submit, "Criar Company", class: 'btn btn-primary' %>
  </div>
<% end %>
