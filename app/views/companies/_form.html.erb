<%= simple_form_for @company do |f| %>
  <div class="row">
    <div class="col-mb-12">
      <%= f.input :name, input_html: { class: 'form-control' } %>
    </div>

    <div class="col-mb-6">
    <%= f.input :url, input_html: { class: 'form-control' } %>
    </div>

    <%= image_tag(url_for(@company.logo), class: 'company-logo') unless @company.new_record? && !@company.logo.nil? %>

  <div class="col-mb-6">
  <%= f.input :logo %>
  </div>

  <div class="col-mb-3 mt-4">
    <%= f.button :submit, "Criar Company", class: 'btn btn-primary' %>
  </div>
  </div>
<% end %>
